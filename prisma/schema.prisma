generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  //url = "postgres://postgres:postgrespw@localhost:49153"
}

model Coletor {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  cpf       String    @unique
  password  String
  corridaId Int?
  Veiculo   Veiculo?  @relation(fields: [veiculoId], references: [id])
  veiculoId Int?
  Corrida   Corrida[]
}

model Produtor {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  cnpj      String    @unique
  password  String
  local     Local?
  corridaId Int?
  Corrida   Corrida[]
}

model Local {
  id          Int    @id @default(autoincrement())
  tipoLixo    String
  cep         String
  estado      String
  municipio   String
  bairro      String
  rua         String
  complemento String

  Produtor   Produtor @relation(fields: [produtorId], references: [id])
  produtorId Int      @unique
}

model Corrida {
  id         Int       @id @default(autoincrement())
  horario    String
  rota       String
  coletor    Coletor?  @relation(fields: [coletorId], references: [id])
  produtorId Int
  coletorId  Int
  Produtor   Produtor? @relation(fields: [produtorId], references: [id])
}

model Veiculo {
  id             Int       @id @default(autoincrement())
  modelo         String
  placa          String
  numeroRegistro String
  donoVeiculo    Coletor[]
}
